<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:id="@+id/linear_huesped"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_huesped"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:layout_marginEnd="16dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.SmallComponent"/>

        <LinearLayout
            android:id="@+id/linear_huesped1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/linear_huesped2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_nombre_huesped"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre Apellido"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_estado_huesped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hospedado"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:background="#E8F5E9"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"/>
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_habitacion_huesped"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HabitaciÃ³n: 101"
                android:textColor="#616161"
                android:layout_marginTop="4dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_telefono_huesped"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tel: 600111222"
                android:textSize="13sp"
                android:textColor="#757575"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>