<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_mantenimiento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5DC"
    tools:context=".actividad.Presentacion">



    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/TextView_mmto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Pantalla Menu Mantenimiento"
        android:textSize="20sp"
        android:textColor="#C32626"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_consultar_editar_perfil_mmto"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="#9BD973"
        android:padding="5dp"
        android:text="Consultar/Editar Perfil"

        />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_consultar_tareas_pdtes_mmto_hotel"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#9BD973"
        android:layout_marginTop="30dp"
        android:text="Consultar Tareas Pendientes/Asignadas"
        android:padding="5dp"

        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_consultar_Encuestas_mmto"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#9BD973"
        android:layout_marginTop="30dp"
        android:text="Consultar Encuestas"
        android:padding="5dp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/boton_cerrar_sesion"
        android:layout_width="match_parent"
    android:layout_marginHorizontal="80dp"
    android:layout_marginTop="30dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
        android:backgroundTint="#9BD973"
    android:text="Cerrar SesiÃ³n "
    android:textStyle="bold"
    android:padding="3dp"

    />


</LinearLayout>