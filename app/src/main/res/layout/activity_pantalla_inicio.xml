<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Pantalla_Inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5DC"
    android:gravity="center_horizontal"
    tools:context=".actividad.Pantalla_Inicio"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/linear_bienvenida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
<!-- header-->
        <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/texto_bienvnida"
        android:text="Bienvenido al Hotel Pelusa "
        android:gravity="center"
        android:textColor="#CE2222"
        android:typeface="sans"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginEnd="5dp"

        />
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginTop="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/hotel_bg"
            />

    </LinearLayout>


    <!-- parte del medio-->

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:textSize="18sp"
        android:layout_marginTop="100dp"
        android:text="Usuario:"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/campo_user_name"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:inputType="text"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_contrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="ContraseÃ±a:"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/campo_pasword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- botones-->
    <LinearLayout
        android:id="@+id/linear_botones_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center"

        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/boton_inicio_sesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#9BD973"
            android:text="Iniciar Sesion "
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_marginEnd="30dp"

             />
        <com.google.android.material.button.MaterialButton
             android:id="@+id/boton_inicio_registrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F8C537"
            android:text="Registrarse "
            android:textStyle="bold"
            android:padding="20dp"

            />
"


    </LinearLayout>



</LinearLayout>