<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainPantallaRegistro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F5F5DC"
    android:gravity="center_horizontal"
    tools:context=".actividad.Pantalla_Registro"
    >
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/CampoTextoRegistro"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:text=" Pantalla Registro"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="#9D2525"
        android:textSize="30dp"
        android:padding="5dp"
        android:textStyle="bold"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_nombre"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Nombre:"
        android:textColor="@color/black"
        android:textSize="15sp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Campo_DatosNombreUser_PantallaRegistro"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:inputType="text"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_apellidos"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:text="Apellidos:"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Campo_DatosApellidosUser_PantallaRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:inputType="text"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_email"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:text="Correo electrónico:"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Campo_email_PantallaRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:inputType="textEmailAddress"
            android:textColor="#3D53B6"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_phone"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:text="Teléfono:"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Campo_telefono_PantallaRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3D53B6"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:inputType="phone"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_pass"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:text="Contraseña:"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Campo_Contrasena_PantallaRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3D53B6"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_pass1"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:text=" Confirmar Contraseña:"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Campo_Confirma_Contrasena_PantallaRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3D53B6"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Switch
        android:id="@+id/switch_pantalla_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar terminos y condiciones"
        android:layout_marginTop="20dp"
        />





    <LinearLayout
        android:id="@+id/linear_interior_botones_pantalla_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/boton_registrate_pantalla_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrate"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#9BD973"
            android:textStyle="bold"
            android:padding="20dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/boton_cancelar_pantalla_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancelar"
            android:layout_marginTop="5dp"
            android:backgroundTint="#E25822"
            android:padding="20dp"
            android:textStyle="bold"
            />



    </LinearLayout>



</LinearLayout>