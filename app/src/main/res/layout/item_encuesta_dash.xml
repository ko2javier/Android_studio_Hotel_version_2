<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_encuesta_resumen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="#DDDDDD"
    app:strokeWidth="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/linear_padre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/linear_hijo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_asterisk_24"
                app:tint="#FBC02D"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/txt_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Limpieza HabitaciÃ³n"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RatingBar
                android:id="@+id/rating_bar_resumen"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4.3"
                android:stepSize="0.1"
                android:isIndicator="true"
                android:theme="@style/Widget.AppCompat.RatingBar.Indicator"/>

            <TextView
                android:id="@+id/txt_promedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promedio: 4.3"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:textColor="#555"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_cantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 encuestas registradas"
                android:textSize="12sp"
                android:textColor="#888"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_show_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar Detalles >"
            android:gravity="end"
            android:textColor="#1976D2"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>