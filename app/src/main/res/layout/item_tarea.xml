<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_tarea"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_icono_tarea"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_limpieza" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_tipo_tarea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tipo: Limpieza"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_estado_tarea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pendiente"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#D32F2F"
                        android:background="#FFEBEE"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        />
                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_ubicacion_tarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Planta 2 - HabitaciÃ³n 203"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:layout_marginTop="4dp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_detalle_tarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pasillo Norte"
                    android:textSize="13sp"
                    android:textColor="#757575"
                    android:layout_marginTop="2dp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_asignada_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Asignada a: Sin asignar"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:textColor="#1A237E"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_accion_tarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ASIGNAR"
            android:textColor="#FFFFFF"
            app:backgroundTint="#51A454"
            app:cornerRadius="8dp"
           android:layout_marginTop="10dp"
            />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>